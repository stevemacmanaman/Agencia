extends ../layout/index
block contenido
    main.container.mt-5
        .row
            .col-md-5
               img(src=`/img/destinos_${viaje.imagen}_ln.jpg`, alt="", class="img-fluid")
            .col-md-7    
                h1 #{viaje.titulo}
                p 
                    i.fas.fa-calendar-alt  
                    |  Fecha de Ida #{viaje.fecha_ida} - Fecha de Vuelta#{viaje.fecha_vuelta}
                p
                    i.fas.fa-dollar-sign
                    |  Precio #{viaje.precio}
                p
                    i.fas.fa-users
                    |  #{viaje.disponibles} Lugares Disponibles
                p=viaje.descripcion 